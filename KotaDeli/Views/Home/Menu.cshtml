@model List<Menu>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Menu</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12 mb-3">
                <div class="card shadow-sm rounded position-relative">

                    <span class="badge bg-dark cart-quantity position-absolute top-0 end-0 m-2 rounded-circle" data-id="@item.MenuId">0</span>

                    <div class="card-body d-flex align-items-center">
                        <img src="@item.ImageUrl" class="rounded" style="width: 150px; height: 150px; object-fit: cover; margin-right: 20px;">

                        <div class="flex-grow-1">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <h6 class="text-primary">@item.Price.ToString("c")</h6>

                            <div class="d-flex align-items-center">
                          
                                <a class="btn btn-dark add-to-cart-button"
                                   asp-controller="Order"
                                   asp-action="AddItemToCart"
                                   asp-route-id="@item.MenuId">
                                    <i class="bi bi-bag-plus-fill"></i> Add 
                                </a>
                            </div>

           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

